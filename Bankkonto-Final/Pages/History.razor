@page "/History"

<div class="container py-3">
    <h3 class="mb-4">Transaction history</h3>

    @if (!string.IsNullOrWhiteSpace(_errorMessage))
    {
        <div class="alert alert-danger" role="alert">@_errorMessage</div>
    }

    @if (_transactions.Count == 0)
    {
        <p class="text-muted">No transaction history yet.</p>
    }
    else
    {
        <div class="row g-3 align-items-end mb-3">
            <div class="col-12 col-md-2">
                <label class="form-label">From date</label>
                <InputDate TValue="DateTime?" class="form-control" @bind-Value="FromDate" />
            </div>
            <div class="col-12 col-md-2">
                <label class="form-label">To date</label>
                <InputDate TValue="DateTime?" class="form-control" @bind-Value="ToDate" />
            </div>
            <div class="col-12 col-md-2">
                <label class="form-label">Type</label>
                <select class="form-select" value="@TypeFilterString" @onchange="OnTypeFilterChanged">
                    <option value="">All types</option>
                    <option value="Deposit">Deposit</option>
                    <option value="Withdrawal">Withdrawal</option>
                    <option value="Transfer">Transfer</option>
                </select>
            </div>
            <div class="col-6 col-md-2">
                <label class="form-label d-block">&nbsp;</label>
                <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">Clear filters</button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>Time</th>
                        <th>Type</th>
                        <th>Account ID</th>
                        <th class="text-end">Amount</th>
                        <th>Currency</th>
                        <th class="text-end">Balance after</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in PagedTransactions)
                    {
                        <tr>
                            <td><small class="text-muted">@t.Timestamp.ToLocalTime()</small></td>
                            <td>@GetTransactionTypeLabel(t.Type)</td>
                            <td>@ShortId(GetDisplayAccountId(t)) (@GetAccountTypeLabel(t.AccountType))</td>
                            <td class="text-end">@t.Amount.ToString("F2")</td>
                            <td>@t.Currency</td>
                            <td class="text-end">@t.BalanceAfter.ToString("F2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end">
            <nav>
                <ul class="pagination">
                    <li class="page-item @( _currentPage == 1 ? "disabled" : null)">
                        <button class="page-link" @onclick="() => GoToPage(_currentPage - 1)">Previous</button>
                    </li>
                    <li class="page-item disabled"><span class="page-link">Page @_currentPage of @TotalPages</span></li>
                    <li class="page-item @( _currentPage >= TotalPages ? "disabled" : null)">
                        <button class="page-link" @onclick="() => GoToPage(_currentPage + 1)">Next</button>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>
