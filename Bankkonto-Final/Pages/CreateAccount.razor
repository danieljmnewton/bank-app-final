@page "/CreateAccount"
@page "/"
@using System.ComponentModel.DataAnnotations
@inject IAccountService AccountService

<div class="container py-3">
    <h3 class="mb-4">Accounts</h3>

    @if (!string.IsNullOrWhiteSpace(_errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @_errorMessage
        </div>
    }

    <div class="row g-4">
        <div class="col-12 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <EditForm Model="_model" OnValidSubmit="CreateAccountAsync">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Account name</label>
                            <InputText class="form-control" @bind-Value="_model.Name" />
                            <ValidationMessage For="@(() => _model.Name)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Account type</label>
                            <InputSelect class="form-select" @bind-Value="_model.Type">
                                <option value="@AccountType.None" disabled>Select account type</option>
                                <option value="@AccountType.Deposit">Basic account</option>
                                <option value="@AccountType.Savings">Savings account</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => _model.Type)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Currency</label>
                            <InputSelect class="form-select" @bind-Value="_model.Currency">
                                <option value="@CurrencyType.None" disabled>Select currency</option>
                                @foreach (var currency in
                                                                Enum.GetValues(typeof(CurrencyType)).Cast<CurrencyType>().Where(c => c !=
                                                                CurrencyType.None))
                                {
                                    <option value="@currency">@currency</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _model.Currency)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Initial balance</label>
                            <InputNumber class="form-control" @bind-Value="_model.InitialBalance" max="10000000" step="0.01" inputmode="decimal" />
                            <ValidationMessage For="@(() => _model.InitialBalance)" />
                        </div>

                        <button class="btn btn-primary" type="submit">Create account</button>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-3">All accounts</h4>

                    @if (_accounts.Count == 0)
                    {
                        <p class="text-muted mb-0">No accounts yet, create your first account!</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th scope="col">Account name</th>
                                        <th scope="col">Account number</th>
                                        <th scope="col">Account type</th>
                                        <th scope="col" class="text-end">Balance</th>
                                        <th scope="col">Currency</th>
                                        <th scope="col">Updated</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in _accounts)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@account.Name</td>
                                            <td class="fw-semibold">@account.Id.ToString()[..6]</td>
                                            <td>@GetAccountTypeLabel(account.AccountType)</td>
                                            <td class="text-end">@account.Balance.ToString("F2")</td>
                                            <td>@account.Currency</td>
                                            <td><small class="text-muted">@account.LastUpdated.ToLocalTime()</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateAccountModel _model = new();
    private List<BankAccount> _accounts = new();
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _accounts = await AccountService.GetAccounts();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load accounts: {ex.Message}";
            Console.Error.WriteLine(ex);
            _accounts = new List<BankAccount>();
        }
    }
    private async Task CreateAccountAsync()
    {
        try
        {
            Console.WriteLine(_model.Name);

            var created = await AccountService.CreateAccount(
                _model.Name,
                _model.Type,
                _model.Currency,
                _model.InitialBalance
            );

            _accounts.Add(created);
            _model.Clear();
            _errorMessage = null;
        }
        catch (ArgumentException ex)
        {
            _errorMessage = $"Invalid value: {ex.Message}";
            Console.Error.WriteLine(ex);
        }
        catch (InvalidOperationException ex)
        {
            _errorMessage = $"The action could not be completed: {ex.Message}";
            Console.Error.WriteLine(ex);
        }
        catch (Exception ex)
        {
            _errorMessage = $"An unexpected error occurred: {ex.Message}";
            Console.Error.WriteLine(ex);
        }
    }

    private static string GetAccountTypeLabel(AccountType type)
    {
        return type switch
        {
            AccountType.Deposit => "Basic account",
            AccountType.Savings => "Savings account",
            _ => "Unknown"
        };
    }

    private class CreateAccountModel : IValidatableObject
    {
        public string Name { get; set; } = string.Empty;
        public AccountType Type { get; set; } = AccountType.None;
        public CurrencyType Currency { get; set; } = CurrencyType.None;
        public decimal InitialBalance { get; set; } = 0m;

        public void Clear()
        {
            Name = string.Empty;
            Currency = CurrencyType.None;
            InitialBalance = 0;
            Type = default;
        }

        public IEnumerable<ValidationResult> Validate(ValidationContext validationContext)
        {
            if (string.IsNullOrWhiteSpace(Name))
            {
                yield return new ValidationResult("Account name is required.", new[] { nameof(Name) });
            }

            if (Type == AccountType.None)
            {
                yield return new ValidationResult("Select account type.", new[] { nameof(Type) });
            }

            if (Currency == CurrencyType.None)
            {
                yield return new ValidationResult("Select currency.", new[] { nameof(Currency) });
            }

            if (InitialBalance > 10_000_000m)
            {
                yield return new ValidationResult("Initial balance may be at most 10,000,000.", new[] { nameof(InitialBalance) });
            }
        }
    }
}
