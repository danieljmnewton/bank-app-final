@page "/Payments"
@using System.ComponentModel.DataAnnotations
@inject IAccountService AccountService
@inject ITransactionService Transaction

<div class="container py-3">
    <h3 class="mb-4">Insättning</h3>

    @if (!string.IsNullOrWhiteSpace(_errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @_errorMessage
        </div>
    }

    <div class="row g-4">
        <div class="col-12 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <EditForm Model="_deposit" OnValidSubmit="DepositAsync">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Välj konto</label>
                            <InputSelect class="form-select" @bind-Value="_deposit.SelectedAccountId">
                                <option value="@Guid.Empty">Välj konto</option>
                                @foreach (var acc in _accounts)
                                {
                                    <option value="@acc.Id">@acc.Id.ToString()[..6]</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _deposit.SelectedAccountId)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Belopp</label>
                            <InputNumber @bind-Value="_deposit.Amount" class="form-control" min="1" max="10000000" step="0.01" inputmode="decimal" />
                            <ValidationMessage For="@(() => _deposit.Amount)" />
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-success" type="submit" disabled="@(!_accounts.Any())">
                                Sätt in valfritt belopp
                            </button>
                        </div>
                    </EditForm>

                    @if (!string.IsNullOrWhiteSpace(_depositInfo))
                    {
                        <p class="mt-3 text-muted">@_depositInfo</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-3">Alla konton</h4>

                    @if (_accounts.Count == 0)
                    {
                        <p class="text-muted mb-0">Det finns inga konton ännu, registrera ditt första konto!</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th scope="col">Kontonamn</th>
                                         <th scope="col">Kontonummer</th>
                                        <th scope="col">Kontotyp</th>
                                        <th scope="col" class="text-end">Saldo</th>
                                        <th scope="col">Valuta</th>
                                        <th scope="col">Uppdaterad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in _accounts)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@account.Name</td>
                                            <td class="fw-semibold">@account.Id.ToString()[..6]</td>
                                            <td>@GetAccountTypeLabel(account.AccountType)</td>
                                            <td class="text-end">@account.Balance.ToString("F2")</td>
                                            <td>@account.Currency</td>
                                            <td><small class="text-muted">@account.LastUpdated.ToLocalTime()</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-3">
    <h3 class="mb-4">Uttag</h3>

    <div class="row g-4">
        <div class="col-12 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <EditForm Model="_withdraw" OnValidSubmit="WithdrawAsync">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Välj konto</label>
                            <InputSelect class="form-select" @bind-Value="_withdraw.SelectedAccountId">
                                <option value="@Guid.Empty">Välj konto</option>
                                @foreach (var acc in _accounts)
                                {
                                    <option value="@acc.Id">@acc.Id.ToString()[..6]</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _withdraw.SelectedAccountId)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Belopp</label>
                            <InputNumber @bind-Value="_withdraw.Amount" class="form-control" min="1" max="10000000" step="0.01" inputmode="decimal" />
                            <ValidationMessage For="@(() => _withdraw.Amount)" />
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-warning" type="submit" disabled="@(!_accounts.Any())">
                                Ta ut valfritt belopp
                            </button>
                        </div>
                    </EditForm>

                    @if (!string.IsNullOrWhiteSpace(_withdrawInfo))
                    {
                        <p class="mt-3 text-muted">@_withdrawInfo</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-3">
    <h3 class="mb-4">Överföring</h3>

    <div class="row g-4">
        <div class="col-12 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <EditForm Model="_transfer" OnValidSubmit="TransferAsync">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Från konto</label>
                            <InputSelect class="form-select" @bind-Value="FromId">
                                <option value="@Guid.Empty">Välj konto</option>
                                @foreach (var acc in _accounts.Where(a => a.Id != _transfer.ToAccountId))
                                {
                                    <option value="@acc.Id">@acc.Id.ToString()[..6]</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _transfer.FromAccountId)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Till konto</label>
                            <InputSelect class="form-select" @bind-Value="ToId">
                                <option value="@Guid.Empty">Välj konto</option>
                                @foreach (var acc in _accounts.Where(a => a.Id != _transfer.FromAccountId))
                                {
                                    <option value="@acc.Id">@acc.Id.ToString()[..6]</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _transfer.ToAccountId)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Belopp</label>
                            <InputNumber @bind-Value="_transfer.Amount" class="form-control" min="1" max="10000000" step="0.01" inputmode="decimal" />
                            <ValidationMessage For="@(() => _transfer.Amount)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Anteckning</label>
                            <InputText class="form-control" @bind-Value="_transfer.Note" placeholder="Ange en anteckning för överföringen" />
                            <ValidationMessage For="@(() => _transfer.Note)" />
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-info" type="submit" disabled="@(_accounts.Count < 2)">
                                Överför
                            </button>
                        </div>
                    </EditForm>

                    @if (!string.IsNullOrWhiteSpace(_transferInfo))
                    {
                        <p class="mt-3 text-muted">@_transferInfo</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Bankkonto> _accounts = new();
    private string? _errorMessage;

    private string? _depositInfo;
    private string? _withdrawInfo;
    private string? _transferInfo;

    private DepositModel _deposit = new();
    private WithdrawModel _withdraw = new();
    private TransferModel _transfer = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _accounts = await AccountService.GetAccounts();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Kunde inte ladda konton: {ex.Message}";
            Console.Error.WriteLine(ex);
            _accounts = new List<Bankkonto>();
        }
    }

    private async Task DepositAsync()
    {
        try
        {
            _errorMessage = null;
            _depositInfo = null;
            _withdrawInfo = null;
            _transferInfo = null;

            if (_deposit.SelectedAccountId == Guid.Empty)
            {
                _errorMessage = "Välj ett konto först.";
                return;
            }

            var account = _accounts.FirstOrDefault(a => a.Id == _deposit.SelectedAccountId);
            if (account is null)
            {
                _errorMessage = "Valt konto hittades inte.";
                return;
            }

            await Bankkonto_Final.Domain.Transaction.DepositAsync(AccountService, Transaction, account, _deposit.Amount);

            _depositInfo = $"Satte in {_deposit.Amount.ToString("F2")} {account.Currency} på '{account.Id.ToString()[..6]}'.";
        }
        catch (ArgumentException ex)
        {
            _errorMessage = $"Ogiltigt värde: {ex.Message}";
        }
        catch (InvalidOperationException ex)
        {
            _errorMessage = $"Åtgärden kunde inte utföras: {ex.Message}";
        }
        catch (Exception ex)
        {
            _errorMessage = $"Ett oväntat fel uppstod: {ex.Message}";
        }
    }

    private async Task WithdrawAsync()
    {
        try
        {
            _errorMessage = null;
            _depositInfo = null;
            _withdrawInfo = null;
            _transferInfo = null;

            if (_withdraw.SelectedAccountId == Guid.Empty)
            {
                _errorMessage = "Välj ett konto först.";
                return;
            }

            var account = _accounts.FirstOrDefault(a => a.Id == _withdraw.SelectedAccountId);
            if (account is null)
            {
                _errorMessage = "Valt konto hittades inte.";
                return;
            }

            await Bankkonto_Final.Domain.Transaction.WithdrawAsync(AccountService, Transaction, account, _withdraw.Amount);

            _withdrawInfo = $"Tog ut {_withdraw.Amount.ToString("F2")} {account.Currency} från '{account.Id.ToString()[..6]}'.";
        }
        catch (ArgumentException ex)
        {
            _errorMessage = $"Ogiltigt värde: {ex.Message}";
        }
        catch (InvalidOperationException ex)
        {
            _errorMessage = $"Åtgärden kunde inte utföras: {ex.Message}";
        }
        catch (Exception ex)
        {
            _errorMessage = $"Ett oväntat fel uppstod: {ex.Message}";
        }
    }

    private async Task TransferAsync()
    {
        try
        {
            _errorMessage = null;
            _depositInfo = null;
            _withdrawInfo = null;
            _transferInfo = null;

            if (_transfer.FromAccountId == Guid.Empty || _transfer.ToAccountId == Guid.Empty)
            {
                _errorMessage = "Välj både från- och till-konto.";
                return;
            }

            if (_transfer.FromAccountId == _transfer.ToAccountId)
            {
                _errorMessage = "Från- och till-konto måste vara olika.";
                return;
            }

            var from = _accounts.FirstOrDefault(a => a.Id == _transfer.FromAccountId);
            var to = _accounts.FirstOrDefault(a => a.Id == _transfer.ToAccountId);
            if (from is null || to is null)
            {
                _errorMessage = "Valt konto hittades inte.";
                return;
            }

            if (from.Currency != to.Currency)
            {
                _errorMessage = "Överföring mellan olika valutor stöds inte.";
                return;
            }

            await Bankkonto_Final.Domain.Transaction.TransferAsync(AccountService, Transaction, from, to, _transfer.Amount, _transfer.Note);

            _transferInfo = $"Överförde {_transfer.Amount.ToString("F2")} {from.Currency} från '{from.Id.ToString()[..6]}' till '{to.Id.ToString()[..6]}'.";
        }
        catch (ArgumentException ex)
        {
            _errorMessage = $"Ogiltigt värde: {ex.Message}";
        }
        catch (InvalidOperationException ex)
        {
            _errorMessage = $"Åtgärden kunde inte utföras: {ex.Message}";
        }
        catch (Exception ex)
        {
            _errorMessage = $"Ett oväntat fel uppstod: {ex.Message}";
        }
    }

    private static string GetAccountTypeLabel(AccountType type)
    {
        return type switch
        {
            AccountType.Deposit => "Baskonto",
            AccountType.Savings => "Sparkonto",
            _ => "Okänd"
        };
    }

    private class LastDepositInfo
    {
        public string AccountId { get; set; } = string.Empty;
        public decimal Amount { get; set; }
        public decimal NewBalance { get; set; }
        public CurrencyType Currency { get; set; }
        public DateTime Timestamp { get; set; }
    }

    private class DepositModel
    {
        [Required(ErrorMessage = "Välj konto")]
        public Guid SelectedAccountId { get; set; }

        [Range(typeof(decimal), "1", "10000000", ErrorMessage = "Beloppet måste vara mellan 1 och 10 000 000.")]
        public decimal Amount { get; set; } = 0m;
    }

    private class WithdrawModel
    {
        [Required(ErrorMessage = "Välj konto")]
        public Guid SelectedAccountId { get; set; }

        [Range(typeof(decimal), "1", "10000000", ErrorMessage = "Beloppet måste vara mellan 1 och 10 000 000.")]
        public decimal Amount { get; set; } = 0m;
    }

    private class TransferModel
    {
        [Required(ErrorMessage = "Välj från-konto")]
        public Guid FromAccountId { get; set; }

        [Required(ErrorMessage = "Välj till-konto")]
        public Guid ToAccountId { get; set; }

        [Range(typeof(decimal), "1", "10000000", ErrorMessage = "Beloppet måste vara mellan 1 och 10 000 000.")]
        public decimal Amount { get; set; } = 0m;

        [Required(ErrorMessage = "Ange en anteckning för överföringen.")]
        public string Note { get; set; } = string.Empty;
    }

    private Guid FromId
    {
        get => _transfer.FromAccountId;
        set
        {
            _transfer.FromAccountId = value;
            if (_transfer.ToAccountId == value)
            {
                _transfer.ToAccountId = Guid.Empty;
            }
        }
    }

    private Guid ToId
    {
        get => _transfer.ToAccountId;
        set
        {
            _transfer.ToAccountId = value;
            if (_transfer.FromAccountId == value)
            {
                _transfer.FromAccountId = Guid.Empty;
            }
        }
    }
}