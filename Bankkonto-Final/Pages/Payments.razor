@page "/Payments"
@using System.ComponentModel.DataAnnotations
@inject IAccountService AccountService
@inject ITransactionService Transaction
@inject IPinLockService PinLock
@inject NavigationManager Nav
@using BankAccount_Final.Domain

<div class="container py-3">
    <h3 class="mb-4">Transactions</h3>

    @if (!string.IsNullOrWhiteSpace(_errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @_errorMessage
        </div>
    }

    <div class="row g-4">
        <!-- Deposit -->
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-3">Deposit</h4>
                    <EditForm Model="_deposit" OnValidSubmit="DepositAsync">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Select account</label>
                            <InputSelect class="form-select" @bind-Value="_deposit.SelectedAccountId">
                                <option value="@Guid.Empty">Select account</option>
                                @foreach (var acc in _accounts)
                                {
                                    <option value="@acc.Id">@acc.Id.ToString()[..6]</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _deposit.SelectedAccountId)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Amount</label>
                            <InputNumber @bind-Value="_deposit.Amount" class="form-control" min="1" max="10000000" step="0.01" inputmode="decimal" />
                            <ValidationMessage For="@(() => _deposit.Amount)" />
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-success" type="submit" disabled="@(!_accounts.Any())">
                                Deposit
                            </button>
                        </div>
                    </EditForm>

                    @if (!string.IsNullOrWhiteSpace(_depositInfo))
                    {
                        <p class="mt-3 text-muted">@_depositInfo</p>
                    }
                </div>
            </div>
        </div>

        <!-- Withdrawal -->
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-3">Withdrawal</h4>
                    <EditForm Model="_withdraw" OnValidSubmit="WithdrawAsync">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Select account</label>
                            <InputSelect class="form-select" @bind-Value="_withdraw.SelectedAccountId">
                                <option value="@Guid.Empty">Select account</option>
                                @foreach (var acc in _accounts)
                                {
                                    <option value="@acc.Id">@acc.Id.ToString()[..6]</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _withdraw.SelectedAccountId)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Amount</label>
                            <InputNumber @bind-Value="_withdraw.Amount" class="form-control" min="1" max="10000000" step="0.01" inputmode="decimal" />
                            <ValidationMessage For="@(() => _withdraw.Amount)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <InputSelect class="form-select" @bind-Value="_withdraw.Category">
                                @foreach (var c in Categories)
                                {
                                    <option value="@c">@GetCategoryLabel(c)</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-warning" type="submit" disabled="@(!_accounts.Any())">
                                Withdraw
                            </button>
                        </div>
                    </EditForm>

                    @if (!string.IsNullOrWhiteSpace(_withdrawInfo))
                    {
                        <p class="mt-3 text-muted">@_withdrawInfo</p>
                    }
                </div>
            </div>
        </div>

        <!-- Transfer -->
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-3">Transfer</h4>
                    <EditForm Model="_transfer" OnValidSubmit="TransferAsync">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">From account</label>
                            <InputSelect class="form-select" @bind-Value="FromId">
                                <option value="@Guid.Empty">Select account</option>
                                @foreach (var acc in _accounts.Where(a => a.Id != _transfer.ToAccountId))
                                {
                                    <option value="@acc.Id">@acc.Id.ToString()[..6]</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _transfer.FromAccountId)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">To account</label>
                            <InputSelect class="form-select" @bind-Value="ToId">
                                <option value="@Guid.Empty">Select account</option>
                                @foreach (var acc in _accounts.Where(a => a.Id != _transfer.FromAccountId))
                                {
                                    <option value="@acc.Id">@acc.Id.ToString()[..6]</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _transfer.ToAccountId)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Amount</label>
                            <InputNumber @bind-Value="_transfer.Amount" class="form-control" min="1" max="10000000" step="0.01" inputmode="decimal" />
                            <ValidationMessage For="@(() => _transfer.Amount)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <InputSelect class="form-select" @bind-Value="_transfer.Category">
                                @foreach (var c in Categories)
                                {
                                    <option value="@c">@GetCategoryLabel(c)</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Note</label>
                            <InputText class="form-control" @bind-Value="_transfer.Note" placeholder="Enter a note for the transfer" />
                            <ValidationMessage For="@(() => _transfer.Note)" />
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-info" type="submit" disabled="@(_accounts.Count < 2)">
                                Transfer
                            </button>
                        </div>
                    </EditForm>

                    @if (!string.IsNullOrWhiteSpace(_transferInfo))
                    {
                        <p class="mt-3 text-muted">@_transferInfo</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-3">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">All accounts</h4>

            @if (_accounts.Count == 0)
            {
                <p class="text-muted mb-0">No accounts yet, create your first account!</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead>
                            <tr>
                                <th scope="col">Account name</th>
                                <th scope="col">Account number</th>
                                <th scope="col">Account type</th>
                                <th scope="col" class="text-end">Balance</th>
                                <th scope="col">Currency</th>
                                <th scope="col">Updated</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var account in _accounts)
                            {
                                <tr>
                                    <td class="fw-semibold">@account.Name</td>
                                    <td class="fw-semibold">@account.Id.ToString()[..6]</td>
                                    <td>@GetAccountTypeLabel(account.AccountType)</td>
                                    <td class="text-end">@account.Balance.ToString("F2")</td>
                                    <td>@account.Currency</td>
                                    <td><small class="text-muted">@account.LastUpdated.ToLocalTime()</small></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<BankAccount> _accounts = new();
    private string? _errorMessage;

    private string? _depositInfo;
    private string? _withdrawInfo;
    private string? _transferInfo;

    private DepositModel _deposit = new();
    private WithdrawModel _withdraw = new();
    private TransferModel _transfer = new();

    /// <summary>
    /// Initializes the page and loads accounts. Redirects to PIN page if locked.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        await PinLock.InitializeAsync();
        if (!PinLock.IsUnlocked)
        {
            Nav.NavigateTo("/", true);
            return;
        }

        try
        {
            _accounts = await AccountService.GetAccounts();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load accounts: {ex.Message}";
            Console.Error.WriteLine(ex);
            _accounts = new List<BankAccount>();
        }
    }

    /// <summary>
    /// Handles deposit form submission and records a deposit.
    /// </summary>
    private async Task DepositAsync()
    {
        try
        {
            _errorMessage = null;
            _depositInfo = null;
            _withdrawInfo = null;
            _transferInfo = null;

            if (_deposit.SelectedAccountId == Guid.Empty)
            {
                _errorMessage = "Select an account first.";
                return;
            }

            var account = _accounts.FirstOrDefault(a => a.Id == _deposit.SelectedAccountId);
            if (account is null)
            {
                _errorMessage = "Selected account not found.";
                return;
            }

            await BankAccount_Final.Domain.Transaction.DepositAsync(AccountService, Transaction, account, _deposit.Amount);

            _depositInfo = $"Deposited {_deposit.Amount.ToString("F2")} {account.Currency} to '{account.Id.ToString()[..6]}'.";
        }
        catch (ArgumentException ex)
        {
            _errorMessage = $"Invalid value: {ex.Message}";
        }
        catch (InvalidOperationException ex)
        {
            _errorMessage = $"The action could not be completed: {ex.Message}";
        }
        catch (Exception ex)
        {
            _errorMessage = $"An unexpected error occurred: {ex.Message}";
        }
    }

    /// <summary>
    /// Handles withdrawal form submission and records a withdrawal.
    /// </summary>
    private async Task WithdrawAsync()
    {
        try
        {
            _errorMessage = null;
            _depositInfo = null;
            _withdrawInfo = null;
            _transferInfo = null;

            if (_withdraw.SelectedAccountId == Guid.Empty)
            {
                _errorMessage = "Select an account first.";
                return;
            }

            var account = _accounts.FirstOrDefault(a => a.Id == _withdraw.SelectedAccountId);
            if (account is null)
            {
                _errorMessage = "Selected account not found.";
                return;
            }

            await BankAccount_Final.Domain.Transaction.WithdrawAsync(AccountService, Transaction, account, _withdraw.Amount, _withdraw.Category);

            _withdrawInfo = $"Withdrew {_withdraw.Amount.ToString("F2")} {account.Currency} from '{account.Id.ToString()[..6]}'.";
        }
        catch (ArgumentException ex)
        {
            _errorMessage = $"Invalid value: {ex.Message}";
        }
        catch (InvalidOperationException ex)
        {
            _errorMessage = $"The action could not be completed: {ex.Message}";
        }
        catch (Exception ex)
        {
            _errorMessage = $"An unexpected error occurred: {ex.Message}";
        }
    }

    /// <summary>
    /// Handles transfer form submission and records a transfer.
    /// </summary>
    private async Task TransferAsync()
    {
        try
        {
            _errorMessage = null;
            _depositInfo = null;
            _withdrawInfo = null;
            _transferInfo = null;

            if (_transfer.FromAccountId == Guid.Empty || _transfer.ToAccountId == Guid.Empty)
            {
                _errorMessage = "Select both From and To accounts.";
                return;
            }

            if (_transfer.FromAccountId == _transfer.ToAccountId)
            {
                _errorMessage = "From and To accounts must be different.";
                return;
            }

            var from = _accounts.FirstOrDefault(a => a.Id == _transfer.FromAccountId);
            var to = _accounts.FirstOrDefault(a => a.Id == _transfer.ToAccountId);
            if (from is null || to is null)
            {
                _errorMessage = "Selected account not found.";
                return;
            }

            if (from.Currency != to.Currency)
            {
                _errorMessage = "Transfers between different currencies are not supported.";
                return;
            }

            await BankAccount_Final.Domain.Transaction.TransferAsync(AccountService, Transaction, from, to, _transfer.Amount, _transfer.Note, _transfer.Category);

            _transferInfo = $"Transferred {_transfer.Amount.ToString("F2")} {from.Currency} from '{from.Id.ToString()[..6]}' to '{to.Id.ToString()[..6]}'.";
        }
        catch (ArgumentException ex)
        {
            _errorMessage = $"Invalid value: {ex.Message}";
        }
        catch (InvalidOperationException ex)
        {
            _errorMessage = $"The action could not be completed: {ex.Message}";
        }
        catch (Exception ex)
        {
            _errorMessage = $"An unexpected error occurred: {ex.Message}";
        }
    }

    /// <summary>
    /// Returns a human-readable label for an account type.
    /// </summary>
    private static string GetAccountTypeLabel(AccountType type)
    {
        return type switch
        {
            AccountType.Deposit => "Basic account",
            AccountType.Savings => "Savings account",
            _ => "Unknown"
        };
    }

    private class LastDepositInfo
    {
        public string AccountId { get; set; } = string.Empty;
        public decimal Amount { get; set; }
        public decimal NewBalance { get; set; }
        public CurrencyType Currency { get; set; }
        public DateTime Timestamp { get; set; }
    }

    private class DepositModel
    {
        [Required(ErrorMessage = "Select account")]
        public Guid SelectedAccountId { get; set; }

        [Range(typeof(decimal), "1", "10000000", ErrorMessage = "Amount must be between 1 and 10,000,000.")]
        public decimal Amount { get; set; } = 0m;
    }

    private class WithdrawModel
    {
        [Required(ErrorMessage = "Select account")]
        public Guid SelectedAccountId { get; set; }

        [Range(typeof(decimal), "1", "10000000", ErrorMessage = "Amount must be between 1 and 10,000,000.")]
        public decimal Amount { get; set; } = 0m;

        public ExpenseCategory Category { get; set; } = ExpenseCategory.None;
    }

    private class TransferModel
    {
        [Required(ErrorMessage = "Select a from account")]
        public Guid FromAccountId { get; set; }

        [Required(ErrorMessage = "Select a to account")]
        public Guid ToAccountId { get; set; }

        [Range(typeof(decimal), "1", "10000000", ErrorMessage = "Amount must be between 1 and 10,000,000.")]
        public decimal Amount { get; set; } = 0m;

        [Required(ErrorMessage = "Enter a note for the transfer.")]
        public string Note { get; set; } = string.Empty;

        public ExpenseCategory Category { get; set; } = ExpenseCategory.None;
    }

    private Guid FromId
    {
        get => _transfer.FromAccountId;
        set
        {
            _transfer.FromAccountId = value;
            if (_transfer.ToAccountId == value)
            {
                _transfer.ToAccountId = Guid.Empty;
            }
        }
    }

    private Guid ToId
    {
        get => _transfer.ToAccountId;
        set
        {
            _transfer.ToAccountId = value;
            if (_transfer.FromAccountId == value)
            {
                _transfer.FromAccountId = Guid.Empty;
            }
        }
    }
    private static readonly ExpenseCategory[] Categories = new[]
    {
        ExpenseCategory.None,
        ExpenseCategory.Food,
        ExpenseCategory.Rent,
        ExpenseCategory.Transport
    };

    /// <summary>
    /// Returns a human-readable label for a category.
    /// </summary>
    private static string GetCategoryLabel(ExpenseCategory category) => category switch
    {
        ExpenseCategory.None => "No category",
        ExpenseCategory.Food => "Food",
        ExpenseCategory.Rent => "Rent",
        ExpenseCategory.Transport => "Transport",
        _ => category.ToString()
    };
}
