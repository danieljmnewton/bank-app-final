@page "/"
@inject IPinLockService PinLock
@inject NavigationManager Nav

<div class="container py-5" style="max-width: 480px;">
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <h3 class="mb-3">Enter PIN</h3>
            <p class="text-muted mb-4">Please enter your 4-digit PIN to access the app.</p>

            @if (!string.IsNullOrWhiteSpace(_error))
            {
                <div class="alert alert-danger" role="alert">@_error</div>
            }

            <div class="mb-3">
                <label class="form-label">PIN</label>
                <input class="form-control" type="password" inputmode="numeric" maxlength="4" minlength="4" @bind="_pin" />
            </div>

            <button class="btn btn-primary w-100" @onclick="UnlockAsync">Unlock</button>
        </div>
    </div>
</div>

@code {
    private string _pin = string.Empty;
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        await PinLock.InitializeAsync();
        if (PinLock.IsUnlocked)
        {
            Nav.NavigateTo("/CreateAccount", true);
        }
    }

    private async Task UnlockAsync()
    {
        _error = null;
        var ok = await PinLock.TryUnlockAsync(_pin);
        if (ok)
        {
            Nav.NavigateTo("/CreateAccount", true);
        }
        else
        {
            _error = "Incorrect PIN. Please try again.";
        }
    }
}
